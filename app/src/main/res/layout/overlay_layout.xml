<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/black">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Alert In"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="36dp"/>

    <!-- Countdown Circle with Text -->
    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="24dp">

        <!-- Circular Progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="10"
            android:progress="10"
            android:progressDrawable="@drawable/circular_progress"/>

        <!-- Countdown Text -->
        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sending SOS in 10s"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </FrameLayout>

    <!-- Extra Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crash detected. Cancel if this was not real."
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="CANCEL ALERT"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_send_now"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SEND NOW"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button_red"/>
    </LinearLayout>

</LinearLayout>
