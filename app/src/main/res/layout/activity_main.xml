<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/black">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CrashGuard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp"/>

    <!-- Contacts input with save button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_input"
        android:padding="8dp"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/etEmergencyContacts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter emergency contact"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:background="@android:color/transparent"
            android:paddingHorizontal="12dp"
            android:inputType="phone" />

        <ImageButton
            android:id="@+id/btnSaveContacts"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button"
            android:src="@android:drawable/ic_menu_save"
            android:tint="@android:color/holo_red_dark"/>
    </LinearLayout>

    <!-- Test Mode Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Mode"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="12dp"/>

        <Switch
            android:id="@+id/switchTestMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- SOS Button -->
    <Button
        android:id="@+id/btnSos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SEND SOS"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_red"
        android:layout_marginBottom="28dp"/>

    <!-- Start / Stop detection buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartDetection"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="START DETECTION"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btnStopDetection"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="STOP DETECTION"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

</LinearLayout>
